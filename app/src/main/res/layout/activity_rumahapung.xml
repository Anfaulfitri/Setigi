<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rumahapung"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rumah Apung"
            android:textColor="#000000"
            android:textSize="15sp"
            android:padding="22dp"
            android:background="@drawable/bgstroke"/>
        <Button
            android:id="@+id/btntgrapung"
            android:background="@drawable/bgbutton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="20dp"
            android:text="Tour"
            android:textColor="#000000"
            android:textSize="13sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/rumahapung"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="70dp"
            android:padding="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/wrumahapung" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rumahapung"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="@string/rumah_apung"
                android:paddingTop="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:id="@+id/articlerumahapung"/>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>