<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selo Tirto Giri"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageslider"
                android:layout_width="match_parent"
                app:sliderIndicatorGravity="start"
                app:sliderIndicatorSelectedColor="@color/colorPrimary"
                app:sliderIndicatorUnselectedColor="@color/background"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="275dp"
        tools:ignore="MissingConstraints"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/btnprofilewisata"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Profile Setigi"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnwisata"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/global1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Wisata"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/btnfasilitas"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fasilitas"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnlokasi"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lokasi"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/btndenah"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/denah"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Denah"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btndevelop"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:gravity="fill_horizontal"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/devlop"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="developper"
                    android:layout_marginLeft="50dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="500dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0812 1741 4145"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/phone"
                        android:drawableTint="#000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wisatasetigi@gmail.com"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="10dp"
                        android:drawableTint="#000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wisatasetigi"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000"
                        android:drawableLeft="@drawable/instagram"
                        android:drawablePadding="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>